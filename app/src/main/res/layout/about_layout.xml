<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="3dp">



    <TextView
        android:id="@+id/abT1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Fresher Welcome Voting"
        android:textColor="@color/colorPrimary"
        android:textSize="22sp" />

    <ImageView
        android:id="@+id/abImg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/abT1"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/abT2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/abImg"
        android:layout_margin="5dp"
        android:text="Supported by :"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="italic" />

    <LinearLayout
        android:id="@+id/abLine1"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_below="@id/abT2"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/aha" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/k3k" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/abLine2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/abLine1"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Mg Ank Htoo"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Mg Kyaw Khaing"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/abLine3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/abLine2"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginTop="3dp">


        <Button
            android:id="@+id/ahaFb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/press"
            android:text="Facebook"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/ahaPh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:background="@drawable/press"
            android:text="Phone"
            android:textColor="@android:color/white" />


        <Button
            android:id="@+id/k3Fb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:background="@drawable/press"
            android:text="Facebook"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/k3Ph"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/press"
            android:text="Phone"
            android:textColor="@android:color/white" />


    </LinearLayout>

    <View
        android:id="@+id/last"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/colorPrimary"
        android:layout_below="@id/abLine3"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"/>



</RelativeLayout>